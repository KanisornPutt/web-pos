{"ast":null,"code":"import { computed } from \"vue\";\nimport { useStore } from \"vuex\";\nimport ItemInCart from \"./itemInCart.vue\";\nexport default {\n  components: {\n    ItemInCart\n  },\n  setup() {\n    const store = useStore();\n    const cart = computed(() => store.state.cart.cart);\n    const clearCart = () => {\n      store.commit(\"cart/clearCart\");\n    };\n    const totalPrice = computed(() => {\n      if (cart.value.length === 0) {\n        return 0;\n      }\n      return cart.value.reduce((acc, item) => acc + item.price * item.amount, 0);\n    });\n    return {\n      clearCart,\n      cart,\n      totalPrice\n    };\n  }\n};","map":{"version":3,"names":["computed","useStore","ItemInCart","components","setup","store","cart","state","clearCart","commit","totalPrice","value","length","reduce","acc","item","price","amount"],"sources":["/Users/shane/Desktop/isc project/frontend/web-pos 3.0/src/components/dashboard/Cart.vue"],"sourcesContent":["<template>\n  <!-- Navbar for less than lg screen -->\n  <nav class=\"navbar navbar-expand-lg d-lg-none bg-body-tertiary fixed-bottom\">\n    <a class=\"navbar-brand mx-4\" href=\"#\">Total: {{ totalPrice }} THB</a>\n    <button\n      class=\"btn btn-success ms-auto mx-4\"\n      type=\"button\"\n      data-bs-toggle=\"offcanvas\"\n      data-bs-target=\"#offcanvasResponsive\"\n      aria-controls=\"offcanvasResponsive\"\n    >\n      Cart({{ cart.length }})\n    </button>\n  </nav>\n\n  <!-- Offcanvas -->\n  <div\n    class=\"offcanvas-lg offcanvas-end bg-body-tertiary\"\n    tabindex=\"-1\"\n    id=\"offcanvasResponsive\"\n    aria-labelledby=\"offcanvasResponsiveLabel\"\n    style=\"width: 100%'\"\n  >\n    <!-- Offcanvas Header -->\n    <div\n      class=\"offcanvas-header position-fixed top-0 bg-body-tertiary d-none\"\n      style=\"width: 100%\"\n    >\n      <h3>Cart({{ cart.length }})</h3>\n      <button\n        type=\"button\"\n        class=\"btn-close\"\n        data-bs-dismiss=\"offcanvas\"\n        data-bs-target=\"#offcanvasResponsive\"\n        aria-label=\"Close\"\n      >\n        CLOSE\n      </button>\n    </div>\n\n    <!-- Offcavas Body -->\n\n    <div class=\"oc-body \">\n      <h3 class=\"my-1\">Cart({{ cart.length }})</h3>\n      <hr />\n      <div\n        class=\"offcanvas-body\"\n        style=\"overflow-y: auto; max-height: calc(100vh - 150px)\"\n      >\n        <!-- items in cart  -->\n        <div class=\"container-fluid\">\n          <div v-for=\"(item, i) in cart\" :key=\"i\" class=\"row my-3\">\n            <ItemInCart :itemId=\"item.id\" />\n          </div>\n        </div>\n      </div>\n\n      <!-- offcanvas footer -->\n      <div\n        class=\"position-fixed bottom-0 bg-body-tertiary px-4 pt-1 pb-4\"\n        style=\"width: 100%\"\n      >\n        <h5>Total: {{ totalPrice }} THB</h5>\n        <button class=\"btn btn-success\" @click=\"console.log(cart)\">\n          Checkout\n        </button>\n        <button class=\"btn btn-outline-danger mx-3\" @click=\"clearCart\">\n          Clear Cart\n        </button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { computed } from \"vue\";\nimport { useStore } from \"vuex\";\nimport ItemInCart from \"./itemInCart.vue\";\nexport default {\n  components: { ItemInCart },\n  setup() {\n    const store = useStore();\n    const cart = computed(() => store.state.cart.cart);\n    const clearCart = () => {\n      store.commit(\"cart/clearCart\");\n    };\n\n    const totalPrice = computed(() => {\n      if (cart.value.length === 0) {\n        return 0;\n      }\n      return cart.value.reduce(\n        (acc, item) => acc + item.price * item.amount,\n        0\n      );\n    });\n\n    return { clearCart, cart, totalPrice };\n  },\n};\n</script>\n\n<style scoped>\n.oc-body {\n  /*from lg to xxl */\n  width: 22vw;\n  position: fixed;\n\n  /* Media query for sm to md */\n  @media (max-width: 992px) {\n    width: 350px;\n    margin: 20px ;\n    position: relative;\n  }\n}\n</style>\n"],"mappings":"AA2EA,SAASA,QAAO,QAAS,KAAK;AAC9B,SAASC,QAAO,QAAS,MAAM;AAC/B,OAAOC,UAAS,MAAO,kBAAkB;AACzC,eAAe;EACbC,UAAU,EAAE;IAAED;EAAW,CAAC;EAC1BE,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIJ,QAAQ,CAAC,CAAC;IACxB,MAAMK,IAAG,GAAIN,QAAQ,CAAC,MAAMK,KAAK,CAACE,KAAK,CAACD,IAAI,CAACA,IAAI,CAAC;IAClD,MAAME,SAAQ,GAAIA,CAAA,KAAM;MACtBH,KAAK,CAACI,MAAM,CAAC,gBAAgB,CAAC;IAChC,CAAC;IAED,MAAMC,UAAS,GAAIV,QAAQ,CAAC,MAAM;MAChC,IAAIM,IAAI,CAACK,KAAK,CAACC,MAAK,KAAM,CAAC,EAAE;QAC3B,OAAO,CAAC;MACV;MACA,OAAON,IAAI,CAACK,KAAK,CAACE,MAAM,CACtB,CAACC,GAAG,EAAEC,IAAI,KAAKD,GAAE,GAAIC,IAAI,CAACC,KAAI,GAAID,IAAI,CAACE,MAAM,EAC7C,CACF,CAAC;IACH,CAAC,CAAC;IAEF,OAAO;MAAET,SAAS;MAAEF,IAAI;MAAEI;IAAW,CAAC;EACxC;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}